
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.vogella.android.view.triviaapp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8b035"
    android:padding="16dp" >
	<android.support.v4.view.ViewPager xmlns:android="http://schemas.android.com/apk/res/android"
	    android:id="@+id/pager"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" />

	<TextView
	    android:id="@+id/numberCorrect"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignBottom="@+id/pager"
	    android:layout_alignRight="@+id/pager"
	    android:text="TextView" />

	<TextView
	    android:id="@+id/gameTimer"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignBottom="@+id/pager"
	    android:layout_alignLeft="@+id/pager"
	    android:text="TextView" />

	<com.tobolkac.triviaapp.CorrectQuestionView
	    android:id="@+id/questionProgress"
	    android:layout_width="175dp"
	    android:layout_height="wrap_content"
	    android:layout_alignTop="@id/gameTimer"
	    android:layout_marginLeft="5dp"
	    android:layout_centerInParent="true" />
	
</RelativeLayout>
