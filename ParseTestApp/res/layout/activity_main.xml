<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <RelativeLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#f8b035" >

	    <TextView
	        android:id="@+id/currentGamesText"
	        android:layout_width="221dp"
	        android:layout_height="50dp"
	        android:paddingLeft="@dimen/activity_horizontal_margin"
	        android:paddingRight="@dimen/activity_horizontal_margin"
	        android:paddingTop="@dimen/activity_vertical_margin"
	        android:text="@string/current_games_text"
	        android:textColor="#433c32"
	        android:textSize="25dp" />

	    <TextView
	        android:id="@+id/userRecord"
	        android:layout_width="131dp"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="86dp"
	        android:layout_below="@id/currentGamesText"
	        android:layout_alignRight="@id/currentGamesText"
	        android:text="TextView"
	        android:textColor="#6c665e" />

	    <ImageView
	        android:id="@+id/newGameImage"
	        android:layout_width="45dp"
	        android:layout_height="45dp"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:layout_marginRight="26dp"
	        android:contentDescription="New Game"
	        android:src="@drawable/ic_action_new" />
	    
	</RelativeLayout>
	
    <LinearLayout 
        android:id="@+id/gameListLayout"
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_below="@id/headerLayout"
    	android:orientation="vertical">
	    
	    <eu.erikw.PullToRefreshListView
	        android:id="@+id/gamesList"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1" />
	</LinearLayout>
    


</RelativeLayout>
